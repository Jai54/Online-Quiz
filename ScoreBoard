    public ScoreBoard() {
       initComponents();
       int p=(Questions.count)*2;
       int q=Questions.count;
       int r=Questions.flag;
       int t=10-(q+r);
       int s=(r+q);
       
        attem_ques.setText("Total Number of Attempted Questions :- "+s);
        not_attem.setText("NOT Attempted :- "+t);
        correct_ans.setText("Correct Answer :- "+q);
        wrong_ans.setText("Wrong Answer :- "+r);
        score.setText("Score :- "+p);
        
        setLocation(600,250);
        setResizable(false);
        setTitle("Knowledge Testing Portal");
        //initComponents();
    }
